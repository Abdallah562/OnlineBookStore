<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.online_book_store.controller.UserBookDetailsPrinterController"
      prefHeight="400.0" minWidth="500.0"
      fx:id="bookDetailsPane" spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-alignment: baseline_center;">
    <ImageView fx:id="bookCover" />
    <Label fx:id="titleLabel" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
    <Label fx:id="authorLabel" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
    <Label fx:id="categoryLabel" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
    <Label fx:id="priceLabel" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
    <Label fx:id="popularityLabel" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
    <Label fx:id="quantityLabel" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
    <Label fx:id="editionLabel" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
    <Label fx:id="numofPagesLabel" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
    <HBox spacing="5" alignment="CENTER">
        <Button text="Go Back" fx:id="goBackButton" onAction="#navigateToBrowseBooks"/>
        <Button text="Add to Cart" fx:id="editBookButton" onAction="#addToCart"/>
        <Button text="Remove from Cart" fx:id="deleteBookButton" onAction="#removefromCart"/>
        <Button text="Proceed To Payment" fx:id="proceedToCheckoutButton" onAction="#proceedToCheckout"/>

    </HBox>

</VBox>