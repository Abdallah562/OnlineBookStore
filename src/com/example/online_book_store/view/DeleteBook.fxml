<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.online_book_store.controller.AdminViewController" vgap="10" hgap="10" alignment="BASELINE_CENTER"
          minWidth="800" minHeight="600">
    <Label text="Deleting Book" alignment="BASELINE_CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="books" promptText="Select a Book" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Label text="BookID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="bookIDField" GridPane.rowIndex="2" GridPane.columnIndex="1" editable="false" />

    <Label text="Title:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="titleField" GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false" />

    <Label text="Author:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="authorField" GridPane.rowIndex="4" GridPane.columnIndex="1" editable="false" />

    <Label text="Category:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="categoryField" GridPane.rowIndex="5" GridPane.columnIndex="1" editable="false" />

    <Label text="Price:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="priceField" GridPane.rowIndex="6" GridPane.columnIndex="1" editable="false" />

    <Label text="Popularity:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="popularityField" GridPane.rowIndex="7" GridPane.columnIndex="1" editable="false" />

    <Label text="Edition:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <TextField fx:id="editionField" GridPane.rowIndex="8" GridPane.columnIndex="1" editable="false" />

    <Label text="Num of Pages:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <TextField fx:id="numOfPagesField" GridPane.rowIndex="9" GridPane.columnIndex="1" editable="false" />

    <Label text="Quantity:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <TextField fx:id="quantityField" GridPane.rowIndex="10" GridPane.columnIndex="1" editable="false" />

    <ImageView fx:id="imageView" fitHeight="300" fitWidth="200" GridPane.rowIndex="11" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Button text="Delete" onAction="#DeleteBook" GridPane.rowIndex="12" GridPane.columnIndex="0" />
    <Button text="Back To Home Page" onAction="#navigateToAdminView" GridPane.rowIndex="12" GridPane.columnIndex="1" />

</GridPane>
